root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.html]
max_line_length = 256

[sitemap.txt]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
max_line_length = 80
